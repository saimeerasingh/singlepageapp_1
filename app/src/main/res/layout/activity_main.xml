<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        >

        <ImageView
            android:id="@+id/skirt_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:scaleType="fitStart"
            android:src="@drawable/skirt" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meera's Botique"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="#DD2C00"
        android:textAlignment="center"
            android:background="@android:color/white"
            android:alpha="0.6"
            android:layout_margin="20dp"
        />

        <TextView
            android:id="@+id/add_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/cont_text_view"
            android:fontFamily="sans-serif-light"
            android:text=" 123,Finchley Central, London"
            android:textAlignment="center"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Walk-in : 11 a.m to 6 p.m"
            android:fontFamily="sans-serif-light"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:layout_above="@id/add_text_view" />


        <TextView
            android:id="@+id/cont_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-light"
            android:text="Appointments : +44 1232342323"
            android:textAlignment="center"
            android:textSize="23sp"
            android:gravity="center_horizontal"
            android:paddingBottom="50dp"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customise your Festive Outfits!"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#B71C1C"
        android:background="@android:color/background_light"
        android:padding="20dp"
        android:alpha="0.7"
        android:gravity="center_horizontal"
        android:layout_above="@id/add_text_view"
        android:layout_centerInParent="true"
            android:id="@+id/cust_text_view"
        />


    </RelativeLayout>










</androidx.constraintlayout.widget.ConstraintLayout>